{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 550,
  "projection": { 
    "type": "mercator",
    "scale": 790,
    "center": [132, -28]    
}, 
  "layer": [
    {
      "name": "states_layer",
      "data": {
        "url": "output.json",
        "format": { "type": "topojson", "feature": "STE_2021_AUST_GDA2020" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "tooltip": [
          { "field": "properties.STE_NAME21", "type": "nominal", "title": "State" }
        ]
      }
    },
    {
      "name": "graticule_layer",
      "data": {
        "url": "output.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_5" }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#888",
        "strokeWidth": 0.5
      }
    },
    {
      "name": "incidents_layer",
      "data": {
        "url": "Australia Shark Incidents (clean).csv"
      },
      "mark": { "type": "circle", "size": 100, "opacity": 0.8, "strokeWidth": 0.3 },
      "encoding": {
        "longitude": { "field": "Longitude", "type": "quantitative" },
        "latitude": { "field": "Latitude", "type": "quantitative" },
        "color": {
          "field": "Shark.common.name",
          "type": "nominal",
          "title": "Shark Species",
          "legend": { "titleFontSize": 16, "labelFontSize": 12, "symbolSize": 200 },
          "scale": {
            "domain": ["white shark", "tiger shark", "bull shark", "whaler shark", "unknown"],
            "scheme": "set1"
          }
        },
        "tooltip": [
          { "field": "Incident.year", "type": "quantitative", "title": "Year" },
          { "field": "State", "type": "nominal", "title": "State" },
          { "field": "Shark.common.name", "type": "nominal", "title": "Shark Species" },
          { "field": "Victim.activity", "type": "nominal", "title": "Activity" }
        ]
      }
    }
  ]
}
