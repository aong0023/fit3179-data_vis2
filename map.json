{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 550,
  "background": "#bbdbf7",
  "padding": 1,
  "projection": {
    "type": "mercator",
    "scale": 790,
    "center": [132, -28]
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aong0023/fit3179-data_vis2/refs/heads/main/output.json",
        "format": { "type": "topojson", "feature": "STE_2021_AUST_GDA2020" }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "tooltip": [
          { "field": "properties.STE_NAME21", "type": "nominal", "title": "State" }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aong0023/fit3179-data_vis2/refs/heads/main/output.json",
        "format": { "type": "topojson", "feature": "ne_110m_graticules_5" }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#888",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/aong0023/fit3179-data_vis2/refs/heads/main/Australia%20Shark%20Incidents%20(clean).csv"
      },
      "mark": { "type": "circle", "size": 120, "opacity": 0.8 },
      "transform": [
        {
          "calculate": "toNumber(datum['Incident.year'])",
          "as": "IncidentYearNum"
        },
        {
          "calculate": "trim(datum['Shark.common.name'])",
          "as": "SharkName"
        }
      ],
      "encoding": {
        "longitude": { "field": "Longitude", "type": "quantitative" },
        "latitude": { "field": "Latitude", "type": "quantitative" },
        "tooltip": [
          { "field": "UIN", "type": "ordinal", "title": "Incident ID" },
          { "field": "IncidentYearNum", "type": "quantitative", "title": "Year" },
          { "field": "SharkName", "type": "nominal", "title": "Shark" }
        ],
        "color": {
          "field": "SharkName",
          "type": "nominal",
          "legend": null
        }
      }
    }
  ]
}
