{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 500,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/aong0023/fit3179-data_vis2/refs/heads/main/Australia%20Shark%20Incidents%20(clean).csv"
  },
  "transform": [
    { "calculate": "toString(floor(toNumber(datum['Incident.year'])))", "as": "YearNum" },
    { "calculate": "trim(datum['State'])", "as": "State" },
    {
      "aggregate": [
        { "op": "count", "as": "Incidents" }
      ],
      "groupby": ["YearNum", "State"]
    }
  ],
  "layer": [
    {
      "params": [
        {
          "name": "highlight",
          "select": { "type": "point", "fields": ["State"] },
          "bind": "legend"
        }
      ],
      "mark": "area",
      "encoding": {
        "x": { "field": "YearNum", "type": "ordinal", "title": "Year" },
        "y": { "field": "Incidents", "type": "quantitative", "title": "Number of Incidents", "stack": "zero" },
        "color": {
          "field": "State",
          "type": "nominal",
          "title": "State",
          "legend": { "titleFontSize": 16, "labelFontSize": 14, "symbolSize": 150 }
        },
        "opacity": {
          "condition": { "param": "highlight", "value": 1 },
          "value": 0.2
        },
        "tooltip": [
          { "field": "YearNum", "type": "ordinal", "title": "Year" },
          { "field": "State", "type": "nominal", "title": "State" },
          { "field": "Incidents", "type": "quantitative", "title": "Number of Incidents" }
        ]
      }
    },
    {
      "transform": [
        { "filter": "datum.State==='NSW'" },
        { "window": [{ "op": "max", "field": "Incidents", "as": "MaxIncidents" }], "frame": [null, null] },
        { "filter": "datum.Incidents === datum.MaxIncidents" }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 10,
        "dy": -10,
        "color": "red",
        "fontSize": 14
      }
    }
  ]
}
