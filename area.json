{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "background": "#fff8dc",
  "data": {
    "url": "https://raw.githubusercontent.com/aong0023/fit3179-data_vis2/refs/heads/main/Australia%20Shark%20Incidents%20(clean).csv",
    "format": {"type": "csv"}
  },
  "transform": [
    { "calculate": "toNumber(datum['Incident.year'])", "as": "YearNum" },
    { "calculate": "toNumber(datum['Incident.month'])", "as": "MonthNum" },
    {
      "calculate": "datetime(datum['YearNum'], datum['MonthNum'] - 1, 1)",
      "as": "IncidentDate"
    }
  ],
  "vconcat": [
    {
      "width": 700,
      "height": 250,
      "title": "Monthly Shark Incidents (zoomed by year selection below)",
      "mark": {
        "type": "area",
        "interpolate": "linear",      
        "color": "#339af0",    
        "opacity": 0.7
      },
      "encoding": {
        "x": {
          "field": "IncidentDate",
          "type": "temporal",
          "title": "Date",
          "scale": {"domain": {"param": "yearBrush"}},
          "axis": {"title": ""}
        },
        "y": {
          "aggregate": "count",
          "type": "quantitative",
          "title": "Incident Count"
        },
        "tooltip": [
          {"field": "IncidentDate", "type": "temporal", "title": "Date"},
          {"aggregate": "count", "title": "Incidents"}
        ]
      }
    },
    {
      "width": 700,
      "height": 80,
      "title": "Yearly Overview (brush to zoom above)",
      "mark": {
        "type": "area",
        "interpolate": "linear",     
        "color": "#1d4e89", 
        "opacity": 0.8
      },
      "params": [
        {"name": "yearBrush", "select": {"type": "interval", "encodings": ["x"]}}
      ],
      "encoding": {
        "x": {
          "field": "IncidentDate",
          "type": "temporal",
          "title": "Date"
        },
        "y": {
          "aggregate": "count",
          "type": "quantitative",
          "axis": {"tickCount": 3, "grid": false},
          "title": "Incident Count"
        },
        "tooltip": [
          {"field": "IncidentDate", "type": "temporal", "title": "Date"},
          {"aggregate": "count", "title": "Incidents"}
        ]
      }
    }
  ]
}
