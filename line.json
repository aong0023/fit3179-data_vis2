{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 700,
  "height": 400,
  "background": "#fff8dc",
  "data": {
    "url": "https://raw.githubusercontent.com/aong0023/fit3179-data_vis2/refs/heads/main/Australia%20Shark%20Incidents%20(clean).csv"
  },
  "transform": [
    { "calculate": "toString(floor(toNumber(datum['Incident.year'])))", "as": "YearNum" },
    { "calculate": "trim(datum['State'])", "as": "State" },
    {
      "aggregate": [{ "op": "count", "as": "Incidents" }],
      "groupby": ["YearNum", "State"]
    },
    {
      "impute": "Incidents",
      "key": "YearNum",
      "groupby": ["State"],
      "value": 0
    }
  ],
  "layer": [
    {
      "mark": { "type": "line" },
      "params": [
        {
          "name": "highlight",
          "select": { "type": "point", "fields": ["State"] },
          "bind": "legend"
        }
      ],
      "encoding": {
        "x": {
          "field": "YearNum",
          "type": "ordinal",
          "title": "Year",
          "axis": { "labelAngle": 45, "labelFontSize": 16, "titleFontSize": 16 }
        },
        "y": {
          "field": "Incidents",
          "type": "quantitative",
          "title": "Number of Incidents",
          "axis": { "labelFontSize": 16, "titleFontSize": 16 }
        },
        "color": {
          "field": "State",
          "type": "nominal",
          "title": "State",
          "scale": { "scheme": "tableau10" },
          "legend": { "titleFontSize": 18, "labelFontSize": 16, "symbolSize": 200 }
        },
        "opacity": { "condition": { "param": "highlight", "value": 1 }, "value": 0.3 },
        "tooltip": [
          { "field": "YearNum", "type": "ordinal", "title": "Year" },
          { "field": "State", "type": "nominal", "title": "State" },
          { "field": "Incidents", "type": "quantitative", "title": "Number of Incidents" }
        ]
      }
    },

    {
      "data": {
        "values": [
          {
            "State": "NSW",
            "x": "2020",
            "y": 20,
            "textLines": [
              "NSW consistently records the highest",
              "number of shark incidents, linked to",
              "dense coastal population and tourism."
            ]
          }
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontStyle": "italic",
        "align": "left",
        "lineHeight": 14
      },
      "encoding": {
        "x": { "field": "x", "type": "ordinal" },
        "y": { "field": "y", "type": "quantitative" },
        "text": { "field": "textLines" },
        "color": { "field": "State", "type": "nominal", "scale": { "scheme": "tableau10" } }
      }
    },

    {
      "data": {
        "values": [
          {
            "State": "NT",
            "x": "2017",
            "y": 4,
            "textLines": [
              "NT reports the fewest incidents,",
              "reflecting smaller population density",
              "and limited beach activity."
            ]
          }
        ]
      },
      "mark": {
        "type": "text",
        "fontSize": 14,
        "fontStyle": "italic",
        "align": "left",
        "lineHeight": 14
      },
      "encoding": {
        "x": { "field": "x", "type": "ordinal" },
        "y": { "field": "y", "type": "quantitative" },
        "text": { "field": "textLines" },
        "color": { "field": "State", "type": "nominal", "scale": { "scheme": "tableau10" } }
      }
    }
  ],
  "config": { "background": "#fff8dc" }
}
